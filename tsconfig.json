{
    "compilerOptions": {
        "lib": [
            "ES5"
        ],
        "target": "ES5",
        "module": "ES2015",
        "baseUrl": "./",
        "paths": {
            "@": ["src/*"],
            "@script_submodule/*": ["script_submodule/*"]
        },
        "strict": true,
        "typeRoots": [
            "**/types",
            "node_modules/@types"
        ],
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "noImplicitAny": false,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
    },
    "include": ["src","script_submodule","**/types","node_modules/@types"],
}